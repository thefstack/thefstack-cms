{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/SignInForm.jsx", "app/signin/page.jsx", "components/AdminDashboard.jsx", "app/admin/page.jsx", "components/PortfolioManager.jsx", "components/Portfolio.jsx", "app/page.jsx", "components/Hero.jsx", "components/About.jsx", "components/Services.jsx", "components/Clients.jsx", "components/Header.jsx", "components/Footer.jsx"],
  "exclude": ["node_modules"]
}
